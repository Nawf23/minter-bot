# Telegram Bot Token (Get from @BotFather)
TELEGRAM_BOT_TOKEN=

# ─── Chain RPC URLs (HTTP) ───
# ETH is required, others are optional
RPC_URL=
RPC_URL_BASE=
RPC_URL_ARB=
RPC_URL_OP=
RPC_URL_POLY=

# ─── WebSocket URLs (optional, for faster block detection) ───
# If set, the bot uses WebSocket subscriptions for near-instant detection
# with HTTP polling as fallback. If not set, uses polling only.
WS_URL=
WS_URL_BASE=
WS_URL_ARB=
WS_URL_OP=
WS_URL_POLY=

# Encryption Key (Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
ENCRYPTION_KEY=

# ─── Admin Settings ───
# Your Telegram user ID (for admin commands like /broadcast)
ADMIN_USER_ID=
# Your Telegram chat ID (for priority minting and alpha feed)
ADMIN_CHAT_ID=

# ─── Optional ───
# OpenSea API Key (for auto-listing minted NFTs)
OPENSEA_API_KEY=

# Legacy: Only needed for migration from old single-key format
PRIVATE_KEY=
